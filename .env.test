# Test Environment Configuration
# Used by E2E tests with isolated Docker database

# Database Configuration (Test Docker PostgreSQL on port 5433)
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/nutrition_app_test"

# USDA FoodData Central (not needed in tests when using mocks)
USDA_API_KEY=""

# FatSecret Platform API (not needed in tests when using mocks)
FATSECRET_CLIENT_ID=""
FATSECRET_CLIENT_SECRET=""

# Better Auth (use port 3001 for tests)
BETTER_AUTH_SECRET="test-secret-for-e2e-tests-only"
BETTER_AUTH_URL="http://localhost:3001"

# Google OAuth (not used in E2E tests)
GOOGLE_CLIENT_ID="test_client_id"
GOOGLE_CLIENT_SECRET="test_client_secret"

# App Settings
NODE_ENV="test"

# Test server port (different from dev to avoid conflicts)
PORT="3001"

# Playwright
PLAYWRIGHT_TEST_BASE_URL="http://localhost:3001"

# Mock external nutrition APIs
USE_MOCK_NUTRITION_SOURCES="true"

# Resend (Email delivery)
RESEND_API_KEY="your_resend_api_key"
EMAIL_FROM="Nutrition App <no-reply@yourdomain.com>"
