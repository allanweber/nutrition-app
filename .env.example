# Database Configuration (Local Docker PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/nutrition_app"

# Nutritionix API (https://developer.nutritionix.com/)
NUTRITIONIX_APP_ID="your_nutritionix_app_id"
NUTRITIONIX_API_KEY="your_nutritionix_api_key"

# Better Auth
BETTER_AUTH_SECRET="generate-a-strong-random-secret-for-production"
BETTER_AUTH_URL="http://localhost:3000"

# Google OAuth (https://console.cloud.google.com/)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"

# App Settings
NODE_ENV="development"

# Playwright E2E Tests
PLAYWRIGHT_TEST_BASE_URL="http://localhost:3000"

# Feature Flags
USE_MOCK_NUTRITIONIX="false"

# Resend (Email delivery)
RESEND_API_KEY="your_resend_api_key"
EMAIL_FROM="Nutrition App <no-reply@yourdomain.com>"
